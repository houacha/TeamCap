
@model IEnumerable<WeddingPlannerApp.Models.PackageViewModel>
@{
    Layout = "";
}

<style>
    .autoElement01 {
        margin: auto;
        font-variant-caps: small-caps;
        font-family: verdana;
        font-size: 16px;
        padding-top: 16px;
        padding-bottom: 16px;
        padding-left: 24px;
        padding-right: 24px;
        word-wrap: break-word;
        height: auto;
        width: 512px;
        background-color: rgb(192,112,128);
        border: 6px solid rgb(192,112,128);
        border-radius: 32px;
        transition: 0.3s;
        margin-top: 16px;
        margin-bottom: 16px;
    }

    .autoElement02 {
        margin: auto;
        font-variant-caps: small-caps;
        font-family: verdana;
        font-size: 16px;
        padding-top: 16px;
        padding-bottom: 16px;
        padding-left: 24px;
        padding-right: 24px;
        word-wrap: break-word;
        height: auto;
        width: 512px;
        background-color: rgb(192,112,128);
        border: 6px solid rgb(192,112,128);
        border-radius: 32px;
        transition: 0.3s;
        margin-top: 16px;
        margin-bottom: 16px;
    }

    .headerText {
        font-variant-caps: all-petite-caps;
        font-size: 24px;
        line-height: 20%;
    }

    .autoElement02:hover {
        background-color: rgb(208,128,144);
        border: 6px solid white;
    }

    a {
        color: white;
        text-decoration: none;
    }
</style>


@foreach (var item in Model)
{
    <div class="autoElement01" align="center">

        <p class="headerText">
            @Html.DisplayFor(modelItem => item.VendorType)
        </p>
        <p>
            @Html.DisplayFor(modelItem => item.Description)
        </p>
        <p class="headerText">
            $ @Html.DisplayFor(modelItem => item.Price)
        </p>
    </div>
}

