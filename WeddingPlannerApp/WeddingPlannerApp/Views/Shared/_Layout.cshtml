<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
<link type="text/css" rel="stylesheet" href="~/Content/styles.css">

</head>
<body class="disabled">

    <div class="header"align="center">

        @if (User.IsInRole("Couple") == true)
        {
            <p class="superHeaderText">@ViewBag.Name</p>
            //<li>@Html.ActionLink("Home", "Details", "Couples")</li>
        }
        else if (User.IsInRole("Vendor") == true)
        {
            <p class="superHeaderText">@ViewBag.VendorName</p>
            //<li>@Html.ActionLink("Home", "Details", "Vendors")</li>
        }
        else
        {
            <p class="superHeaderText">Vows</p>
            //<li>@Html.ActionLink("Home", "Index", "Home")</li>
        }
        @*<li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@

        @Html.Partial("_LoginPartial")
    </div>

    <div class="container body-content">
        @RenderBody()
        @*this is where the page renders*@
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @*@Scripts.Render("~/bundles/styles")*@
    @RenderSection("scripts", required: false)
</body>
</html>
