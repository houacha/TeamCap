@model IEnumerable<WeddingPlannerApp.Models.PackageViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VendorType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContractPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VendorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractPrice)
            </td>
            <td>
                @Html.ActionLink("Confirm Contract", "ConfirmContract", new { id = item.Id }) |
                @Html.ActionLink("Remove Contract", "DeleteContract", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Back", "Details")

